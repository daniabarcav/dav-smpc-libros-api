{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": { "src/*": ["src/*"] },
    "incremental": true,
    "strict": true,
    "skipLibCheck": true
  },
  
  "include": ["src/**/*.ts", "jest.config.ts"]
}
